<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <link rel="stylesheet" type="text/css" href="bundles/app/thirdparty/semantic-ui/unttext.css">

    <title>Welcome to Invest Smart!</title>

</head>
<body>
    <div>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <div class="logger">
                {{ 'User: ' }} <a href="{{ path('fos_user_profile_show') }}">{{ app.user.username }}</a>
            <a class="reg" href="{{ path('fos_user_security_logout') }}"> {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a></div>
        {% else %}
            <div class="logger">
                <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                <a class="reg" href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>
            </div>
        {% endif %}
    </div>
    {% block header %}{% endblock%}
{% block content %}{% endblock%}

{% block footer %}{% endblock%}

{% javascripts
'http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js'
'@AppBundle/Resources/public/thirdparty/semantic-ui/semantic.min.js'
'https://cdnjs.cloudflare.com/ajax/libs/hinclude/0.9.5/hinclude.min.js'
'https://cdnjs.cloudflare.com/ajax/libs/Chart.js/1.0.2/Chart.min.js'
'@AppBundle/Resources/public/js/portfolio.js'
'bundles/fosjsrouting/js/router.js'
%}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
<script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
{% block scripts %}{% endblock%}
</body>
</html>
